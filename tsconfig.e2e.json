{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@playwright/test"]
  },
  "include": ["global.setup.ts", "playwright.config.ts", "e2e/**/*.ts", "e2e/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
