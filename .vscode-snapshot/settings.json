{
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "typescript.tsdk": "node_modules/typescript/lib",
  "testing.defaultGutterClickAction": "run",
  "vitest.commandLine": "pnpm test -- --watch",
  "search.exclude": {
    "dist": true,
    "coverage": true,
    "node_modules": true
  },
  "editor.codeActions.triggerOnFocusChange": true,

  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.useAgentsMdFile": true,

  "chat.promptFilesLocations": {
    ".github/prompts": true
  },
  "chat.promptFilesRecommendations": {
    "mcp-healthcheck": true,
    "mcp-preflight": true,
    "debug-router": true,
    "full-debug-sweep": true,
    "why-request-failed": true,
    "rls-auth-failure": true,
    "ui-state-desync": true,
    "cors-cookies-session": true,
    "console-issues-only": true,
    "perf-slow-page": true,
    "repro-script-from-devtools": true
  },

  "cSpell.words": [
    "aftermarket",
    "PostgREST",
    "Supabase",
    "NOTIFY",
    "pgrst",
    "loaner",
    "loaners",
    "fallback",
    "fallbacks",
    "telemetry",
    "CSVs",
    "KPI",
    "KPIs",
    "multitenant",
    "reindex",
    "denormalize",
    "upsert",
    "softdelete",
    "softdeleted",
    "materialized",
    "dehydrate",
    "rehydrate",
    "Vercel",
    "Tailwind",
    "vite",
    "Vitest",
    "Playwright",
    "SupaAuth",
    "rpc",
    "FKs",
    "RLS",
    "ILIKE",
    "trigram",
    "pg_trgm",
    "GIN",
    "tsvector",
    "tsquery"
  ]
}
