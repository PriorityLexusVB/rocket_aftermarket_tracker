{
  "servers": {
    "supabase": {
      "type": "http",
      "url": "https://mcp.supabase.com/mcp"
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp"
    },

    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "env": {
        "npm_config_yes": "true"
      }
    },

    "chrome-devtools": {
      "type": "stdio",
      "command": "pnpm",
      "args": [
        "dlx",
        "chrome-devtools-mcp@latest",
        "--browser-url=http://127.0.0.1:9222"
      ]
    },

    "firebase": {
      "type": "stdio",
      "command": "npx",
      "args": ["firebase-tools@latest", "mcp"],
      "env": {
        "npm_config_yes": "true"
      }
    },

    "twilio": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@twilio-alpha/mcp",
        "${input:twilioAuth}",
        "--services",
        "twilio_api_v2010",
        "--tags",
        "Api20100401Message"
      ],
      "env": {
        "npm_config_yes": "true"
      }
    },

    "sentry": {
      "type": "http",
      "url": "https://mcp.sentry.dev/mcp"
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "twilioAuth",
      "description": "Twilio auth string (ACCOUNT_SID/API_KEY:API_SECRET)",
      "password": true
    }
  ]
}
