{
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.tsdk": "node_modules/typescript/lib",
  // Use WSL Ubuntu as the default Windows terminal profile
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "git.confirmSync": false,
  // Ensure WSL Bash is the default terminal for Linux
  "terminal.integrated.defaultProfile.linux": "bash",
  // Set default WSL user
  "remote.WSL.defaultLinuxUser": "rob",
  // Optimize file watching in WSL
  "remote.WSL.fileWatcher.polling": "auto"
}
