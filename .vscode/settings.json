{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.requireConfig": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "eslint.useFlatConfig": true,
  "eslint.run": "onSave",
  "eslint.codeActionsOnSave.mode": "problems",
  "eslint.packageManager": "pnpm",
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.alwaysShowStatus": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "typescript.tsdk": "node_modules/typescript/lib",
  "testing.defaultGutterClickAction": "run",
  "vitest.commandLine": "pnpm test:watch",
  "search.exclude": {
    "dist": true,
    "coverage": true,
    "node_modules": true
  },
  "editor.codeActions.triggerOnFocusChange": true,
  "editor.codeActionsOnSave": { "source.fixAll.eslint": "explicit" },
  "search.useIgnoreFiles": true,
  "files.exclude": {
    "**/.next": true,
    "**/dist": true,
    "**/.turbo": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true
  },
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.useAgentsMdFile": true,
  "chat.promptFilesLocations": {
    ".github/prompts": true
  },
  "chat.promptFilesRecommendations": {
    "vite-env-sanity": true,
    "supabase-access-audit": true
  },
  "chat.mcp.access": "all",
  "chat.mcp.gallery.enabled": true,
  "dev.containers.openRepositoryInContainer": "never",
  "cSpell.words": [
    "aftermarket",
    "PostgREST",
    "Supabase",
    "NOTIFY",
    "pgrst",
    "loaner",
    "loaners",
    "fallback",
    "fallbacks",
    "telemetry",
    "CSVs",
    "KPI",
    "KPIs",
    "multitenant",
    "reindex",
    "denormalize",
    "upsert",
    "softdelete",
    "softdeleted",
    "materialized",
    "dehydrate",
    "rehydrate",
    "Vercel",
    "Tailwind",
    "vite",
    "Vitest",
    "Playwright",
    "SupaAuth",
    "rpc",
    "FKs",
    "RLS",
    "ILIKE",
    "trigram",
    "pg_trgm",
    "GIN",
    "tsvector",
    "tsquery"
  ],
  "chat.mcp.serverSampling": {
    "rocket_aftermarket_tracker/.vscode/mcp.json: supabase": {
      "allowedModels": ["copilot/gpt-5.1-codex-max", "copilot/gpt-5.2"]
    },
    "rocket_aftermarket_tracker/.vscode/mcp.json: github/github-mcp-server": {
      "allowedModels": ["copilot/gpt-5.1-codex-max", "copilot/gpt-5.2"]
    }
  },

  "vite.autoStart": true,
  "vite.open": true,
  "vite.browserType": "embedded",
  "vite.devCommand": "pnpm dev",
  "vite.host": "localhost",
  "vite.port": 4001,

  "browse-lite.chromeExecutable": "/usr/bin/google-chrome",
  "browse-lite.otherArgs": "--no-sandbox --disable-dev-shm-usage",
  "browse-lite.startUrl": "http://localhost:4001/",
  "browse-lite.verbose": false
}
