{
  // Silence noisy CSS compatibility warnings in the VS Code Problems panel.
  // We already target modern browsers; older iOS/Firefox notes are non-blocking.
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,

  // Reduce churn from generated files.
  "files.watcherExclude": {
    "**/dist/**": true
  },
  "search.exclude": {
    "**/dist/**": true
  },

  // Repo/UX niceties
  "git.autofetch": false,
  "gitlens.remotes": [],
  "cSpell.words": ["supabase", "ilike", "prefetch", "Idxs"],
  // Ensure VS Code uses the workspace TypeScript version to avoid TS server path warnings
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.codeActions.triggerOnFocusChange": true,
  "github.copilot.nextEditSuggestions.enabled": true
}
