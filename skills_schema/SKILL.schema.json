{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rocket-aftermarket-tracker.local/schemas/SKILL.schema.json",
  "title": "Skill front-matter contract (parsed from .github/skills/*/SKILL.md)",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "body": {
      "type": "string"
    }
  }
}
